{
	"compilerOptions": {
		// Enable `-b`
		"composite": true,

		// Sources
		"rootDir": "${configDir}",
		"outDir": "${configDir}/dist",

		// Language & emit settings
		"checkJs": true,
		"declarationMap": true,
		"isolatedModules": true,
		"module": "nodenext",
		"sourceMap": true,
		"stripInternal": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,

		// Types / strictness
		"exactOptionalPropertyTypes": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"strict": true,
	},
	"include": [],
	"exclude": [ "**/dist", "**/node_modules" ],
	"references": [
		{ "path": "./packages/resolve" },
		{ "path": "./packages/ts" },
	],
}
